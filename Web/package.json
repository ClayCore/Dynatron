{
    "name": "dynatron_test",
    "version": "1.0.0",
    "main": "src/index.tsx",
    "author": "Claymore",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "concurrently -r \"yarn:type-check:watch\" \"yarn:start\"",
        "start": "parcel ./src/index.html --out-dir build/debug",
        "build": "yarn run type-check && parcel build ./src/index.html --public-url ./public --out-dir build/release",
        "test": "jest",
        "test:watch": "jest --watch",
        "type-check": "tsc --noEmit",
        "type-check:watch": "tsc --noEmit --watch",
        "eject": "react-scripts eject"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn run test"
        }
    },
    "jest": {
        "preset": "ts-jest",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/src/setupTests.ts"
        ],
        "moduleNameMapper": {
            ".+\\.css$": "<rootDir>/src/styleMock.ts"
        },
        "testMatch": [
            "**/__tests__/*.(test|spec).(ts|tsx|js)"
        ]
    },
    "dependencies": {
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-router-dom": "^5.1.2"
    },
    "devDependencies": {
        "@types/node": "^13.13.4",
        "@types/platform": "^1.3.2",
        "@types/react-dom": "^16.9.7",
        "@types/react-router-dom": "^5.1.5",
        "@types/react": "^16.9.34",
        "sass": "1.26.5",
        "concurrently": "^5.2.0",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint": "^6.8.0",
        "husky": "^4.2.5",
        "jest-dom": "^4.0.0",
        "jest": "^25.5.2",
        "parcel-bundler": "^1.12.4",
        "platform": "^1.3.5",
        "prettier-eslint-cli": "^5.0.0",
        "prettier-eslint": "^9.0.1",
        "prettier": "^2.0.5",
        "typescript": "^3.8.3"
    },
    "esLintConfig": {
        "extends": "react-app"
    },
    "engines": {
        "node": ">= 12.14.1",
        "yarn": ">= 1.12.4"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}